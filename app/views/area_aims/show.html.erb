<div style="width:60%; margin:0 auto;">
	<div class="row center-xs">
	    <div class="col-xs-6">
	        <div class="box">
	           <h1> <%= @aim.name %> </h1>
	        </div>
	    </div>
	</div>
	<div class="listado caja" style="width:100%; text-align: center;" >
		<%= @aim.description %>
		<%= link_to "Editar",edit_area_aim_path(@aim),:class => "editar" %> 
	</div>

<div class="row center-xs">
	    <div class="col-xs-6">
	        <div class="box">
	          <h2>TAREAS</h2>
	        </div>
	    </div>
	</div>
<% @labors.each do |l|  %>
	<div class="listado caja">
		<b> <%= link_to l.name,l %> </b>
		<p class="lisp" ><%=l.description %></p>
		<p class="lisp" >Inicio: <%=l.initiation.strftime("%m-%d-%Y")  %> Fin: <%=l.ending.strftime("%m-%d-%Y")  %> </p>
		<%= link_to "Editar",edit_labor_path(l.id),:class => "editar" %>
	</div><br>
<%end%>

<div class="row center-xs">
	    <div class="col-xs-6">
	        <div class="box">
	          <h2>CREAR TAREA</h2>
	        </div>
	    </div>
	</div>
<div>
	<%= form_for(@labor) do |l| %>
	<% @labor.errors.full_messages.each do |message|%>
		<div class="be-alert white">*<%= message %></div>
		<%end%>
		<div class="field">
			<%= l.text_field:name, placeholder: "Nombre", class:"form-control"%>
		</div>
		<div class="field">
			<%= l.text_area:description, placeholder: "Description Tarea", class:"form-control"%>
		</div>
		<div class="field">
			<%= l.text_field:indicator_description, placeholder: "Descripcion de Indicador", class:"form-control"%>
		</div>
		<div class="field">
			<%= l.text_field:indicator, placeholder: "Cantidad de Indicador", class:"form-control"%>
		</div>
		<div class="field">
			<%= l.text_field:initiation, placeholder: "Fecha de Inicio", class:"form-control"%>
		</div>
		<div class="field">
			<%= l.text_field:ending, placeholder: "Fecha de Finalizacion", class:"form-control"%>
		</div>
		<div class="field">
		<%= l.collection_select :client_id, Client.all, :id,:name, {prompt: 'Seleccione Cliente'}, class:"form-control" %>
		</div>
		
		<%= l.hidden_field:area_aim_id, :value => @aim.id %>
				
		<div class="field">
			<%= l.submit "Guardar", class:"btn large-padding be-red" %>
		</div>
	<%end%>
</div>
 

</div>
