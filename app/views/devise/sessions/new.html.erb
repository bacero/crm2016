<div style="width:60%; margin:0 auto;">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    Correo
    <%= f.email_field :email,placeholder: "Ingrese Email", autofocus: true , class:"form-control" %>
  </div>

  <div class="field">
   Contrasena
    <%= f.password_field :password, autocomplete: "off",placeholder: "Ingrese Contrasena", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>
<div class="field" align='right'>
    <%= f.submit "Ingresar", class:"btn large-padding be-red" %>
  </div>
 <% end %>

<%= render "devise/shared/links" %>
</div>