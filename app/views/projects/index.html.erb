<div style="width:80%; margin:0 auto;">
<h1>Proyectos</h1>
<table align="center" id="myTable" style="width:100%;">
	<thead>
	<tr>
		<th>Nombre</th>
		<th>Descripcion</th>
		<th>Inicio</th>
		<th>Fin</th>
		<th>Responsable</th>
		<th>Indicador</th>
	</tr>
</thead>
<tbody>
<% @p.each do |pro|  %>
	<tr>
		<td><b><%= link_to pro.name,pro %></b></td>
		<td><%=pro.description %></td>
		<% if pro.initiation && pro.ending %>
			<td><%=pro.initiation.strftime("%m-%d-%Y")  %></td>
			<td><%=pro.ending.strftime("%m-%d-%Y")  %></td>
		<% else	%>
			<td colspan='2'>Proyecto Recurrente</td>
		<% end %>
		<td>
			<%= if pro.user
						pro.user.username
				end
			%>
		</td>
		<td>
			<%=
				
				if pro.labor_shifts.present?
					pro.labor_shifts.last.advance
					
				else
					0
				end
			 %> / <%=pro.indicator %> 
		</td>


		<td><%= link_to "Editar",edit_project_path(pro.id) %></td>
	</tr>
	
<%end%>
</tbody>
</table>
<br>
<% if current_user.type_user_id==3 || current_user.type_user_id==1%>
	<div class="listado izquierdo">
	    <%= link_to 'Crear Nuevo', new_project_path,:class => "crear" %>
	</div>
<% end%>


</div>
<script type="text/javascript">
$(function(){
  $("#myTable").tablesorter();
});
</script>
